          },
          {
            "time_point": "T1", 
            "timestamp": "2025-01-15T11:00:00Z",
            "delta_value": 0.15,
            "event_type": "evolution",
            "node_id": "node-a2",
            "annotation": "A v1→v2",
            "color": "#2980b9"
          },
          {
            "time_point": "T2",
            "timestamp": "2025-01-15T11:30:00Z", 
            "delta_value": 0.45,
            "event_type": "fork",
            "node_id": "node-b1",
            "annotation": "Fork B1",
            "color": "#e74c3c"
          }
        ]
      }
    }
  ]
}